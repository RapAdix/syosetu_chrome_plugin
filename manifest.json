{
  "manifest_version": 3,
  "name": "Jisho Helper",
  "version": "1.0",
  "description": "Search Jisho for selected Japanese words in a side panel.",
  "permissions": ["storage", "scripting"],
  "host_permissions": [
    "*://jisho.org/*",
    "*://ncode.syosetu.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://ncode.syosetu.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
